  box-sizing: border-box;
}

.body {
  min-height: 100vh;
   background: linear-gradient(to bottom, transparent 0%, #2CB044)
}

.title {
  margin: 20px 0;
}
.title-main {
  font-size: 30px;
  font-weight: bold;
  line-height: 1;
  position: relative;
  display: block;
  width: 50%;
  margin: 0.25em auto;
  padding: .5em .75em;
  text-align: center;
  color: #fff;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-image: url(http://img2.imgtn.bdimg.com/it/u=2901434509,1441053227&fm=27&gp=0.jpg);
}
.title-main::before {
  position: absolute;
  content: '';
  z-index: -2;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-image: inherit;
}
.title-main::after {
  position: absolute;
  content: '';
  z-index: -1;
  top: .25em;
  right: .25em;
  bottom: .25em;
  left: .25em;
  background-color: white;
}

