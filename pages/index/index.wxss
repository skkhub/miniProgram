/* pages/index/index.wxss */
view {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.body {
  /* background: green; */
}

.title-main {
  font-size: 30px;
  font-weight: bold;
  line-height: 1;
  position: relative;
  display: block;
  width: 50%;
  margin: 0.25em auto;
  padding: .5em .75em;
  text-align: center;
  color: #fff;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-image: url(http://img2.imgtn.bdimg.com/it/u=2901434509,1441053227&fm=27&gp=0.jpg);
}
.title-main::before {
  position: absolute;
  content: '';
  z-index: -2;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-image: inherit;
}
.title-main::after {
  position: absolute;
  content: '';
  z-index: -1;
  top: .25em;
  right: .25em;
  bottom: .25em;
  left: .25em;
  background-color: white;
}

swiper {
  height: 200px;
}
.slide-image {
  width: 100%;
  /* height: 200px; */
}

.tools {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 100px;
  /* border: 1px solid red; */
}
.tools-tool {
  width: 20%;
  height: 100%;
  text-align: center;
}
.tool-image {
  width: 100%;
  height: calc(100% - 20px);
}
.tool-text {
  position: relative;
  top: -10px;
  font-size: 14px;
  color: #fff;
  line-height: 1;
}

.scroll-view_H {
  width: 100%;
  height: 50px;
  background: yellow;
  display: flex;
  justify-content: flex-start;
}
